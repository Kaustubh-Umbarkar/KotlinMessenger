<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".messages.ChatLogActivity">


    <EditText
        
        android:id="@+id/etChatLog"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:hint="New Message"
        android:ems="10"
        android:background="@drawable/rounded_edittext_reg_log"
       android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/btnSendChatLog"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/etChatLog"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_round_send_24"
        android:top="20dp"
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:background="@android:color/white"
        android:layout_above="@+id/etChatLog"
        android:layout_marginTop="0dp"

        android:id="@+id/recyViewChatLogActivity"
        android:layout_width="match_parent"
        android:layout_height="677dp" />


</RelativeLayout>